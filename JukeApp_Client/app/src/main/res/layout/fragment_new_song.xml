<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.NewSong.NewSongFragment"
    android:orientation="vertical">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Afegir cançons"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="40dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel·lar"
            android:id="@+id/btnCancel"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="right"
            />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imatge"
            android:layout_column="0"
            android:layout_row="1"
            android:textSize="20dp"
            android:padding="5dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:layout_column="0"
            android:layout_row="0"
            android:textSize="25dp"
            android:hint="Buscar cançons"
            android:id="@+id/edtSearch"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnSearch"
            android:background="@drawable/searchb"
            android:layout_column="4"
            android:layout_row="0"
            android:layout_gravity="end"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom"
            android:layout_column="1"
            android:layout_row="1"
            android:textSize="20dp"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artistes"
            android:layout_column="2"
            android:layout_row="1"
            android:textSize="20dp"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Àlbum"
            android:layout_column="3"
            android:layout_row="1"
            android:textSize="20dp"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duració"
            android:layout_column="4"
            android:layout_row="1"
            android:textSize="20dp"
            android:padding="5dp"/>
    </GridLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/pgrdownload"
        android:visibility="gone"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
</androidx.appcompat.widget.LinearLayoutCompat>