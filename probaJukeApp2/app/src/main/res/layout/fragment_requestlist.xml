<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RequestlistFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Llista de sol·licituds de cançons"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcyRequestlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/titleSong"
            android:text="Enviar canço a la White List"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/red"
            android:text="Enviar canço a la Black List"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>


</LinearLayout>